<div class="container container-top-bottom-margin">
<h2 color="white" align="center" style = "font-size:20px; font-weight-bold; padding:15px;">회원가입</h2>

<form action="/users" method="post" enctype="multipart/form-data">

    <div class="form_group">
      <label for="user_email">이메일</label>
      <input class="form-control" autofocus="autofocus" type="email" name="user[email]" id="user_email" placeholder="sample@kookmin.ac.kr" required>
    </div></br>
      <div class="form_group">
      <label for="user_password">비밀번호</label><br>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>자 이상)</em>
        <% end %><br>
      <input class="form-control" autocomplete="off" type="password" name="user[password]" id="user_password" placeholder="******" required>
    </div></br>
    <div class="form_group">
      <label for="user_password_confirmation">비밀번호 확인</label><br>
      <input class="form-control" autocomplete="off" type="password" name="user[password_confirmation]" id="user_password_confirmation" placeholder="******" required>
    </div></br>

    <div class="field">
     <label for="user_pic">자신을 표현할 수 있는 이미지</label><br>
     <input type="hidden" name="user[pic]" id="user_pic" value="<%=(1..12).to_a.sample%>">
    </div>

    <div class="form_group">
      <label for="user_category">카테고리</label><br>
      <select class="form-control" name="user[category]" id="user_category" required>
        <option value="영화">영화</option>
        <option value="드라마">드라마</option>
        <option value="애니">애니</option>
        <option value="연극">연극</option>
        <option value="만화">만화</option>
        <option value="게임">게임</option>
        <option value="도서">도서</option>
        <option value="자동차">자동차</option>
        <option value="운동">운동</option>
        <option value="아이돌">아이돌</option>
        <option value="여행">여행</option>
        <option value="사진">사진</option>
        <option value="낚시">낚시</option>
      </select>
    </div></br>

    <div class="form_group">
      <label for="user_major">단과대학</label><br>
      <select class="form-control" name="user[major]" id="user_major" required>
        <option value="문과대학">문과대학</option>
        <option value="사회과학대학">사회과학대학</option>
        <option value="법과대학">법과대학</option>
        <option value="경상대학">경상대학</option>
        <option value="조형대학">조형대학</option>
        <option value="삼림과학대학">삼림과학대학</option>
        <option value="자연과학대학">자연과학대학</option>
        <option value="예술대학">예술대학</option>
        <option value="체육대학">체육대학</option>
        <option value="경영대학">경영대학</option>
        <option value="전자정보통신대학">전자정보통신대학</option>
        <option value="건축대학">건축대학</option>
        <option value="자동차융합대학">자동차융합대학</option>
      </select>
    </div></br>

    <div class="form_group">
      <label for="user_gender">성별</label><br>
      <select class="form-control" name="user[gender]" id="user_gender" required>
        <option value="male">남자</option>
        <option value="female">여자</option>
      </select>
    </div></br>
    <div class="actions">
      <input class="btn btn-default" type="submit" name="commit" value="회원가입">
    </div>
</form>
<%#= render "devise/shared/links" %>
</div>

